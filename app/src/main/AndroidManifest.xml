<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.relationship">

    <application
        android:allowBackup="true"
        android:icon="@drawable/daily1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Relationship">
        <activity
            android:name=".activity.DictionaryActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MusicActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PictureActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NoteActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ClockActivity"
            android:exported="false" />

        <activity
            android:name=".MenuActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="MENU"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>